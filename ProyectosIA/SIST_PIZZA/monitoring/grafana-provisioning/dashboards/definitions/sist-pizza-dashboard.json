{
  "dashboard": {
    "id": null,
    "uid": "sist-pizza-overview",
    "version": 1,
    "schemaVersion": 36,
    "timezone": "browser",
    "title": "SIST_PIZZA - Overview",
    "panels": [
      {
        "title": "HTTP Requests Total",
        "type": "graph",
        "targets": [
          { "expr": "sum(rate(http_requests_total[5m])) by (status)" }
        ]
      },
      {
        "title": "Request Duration (p95)",
        "type": "graph",
        "targets": [
          { "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))" }
        ]
      },
      {
        "title": "Comandas Creadas (Ãºltimas 24h)",
        "type": "stat",
        "targets": [
          { "expr": "increase(comandas_created_total[24h])" }
        ]
      },
      {
        "title": "Node.js Event Loop Lag (ms)",
        "type": "graph",
        "targets": [
          { "expr": "nodejs_eventloop_lag_seconds * 1000" }
        ]
      },
      {
        "title": "Postgres Connections",
        "type": "graph",
        "targets": [
          { "expr": "pg_stat_activity_count" }
        ]
      },
      {
        "title": "Redis Ops/sec",
        "type": "graph",
        "targets": [
          { "expr": "rate(redis_commands_processed_total[5m])" }
        ]
      }
    ]
  }
}
